
<% @results.order('lastname ASC').each do |result| %>
<%= link_to result  do %>
<div class="results-loc-show">
    <div>
        <b style="text-transform: capitalize;"><%= result.lastname.capitalize %>
            <%= result.firstname.capitalize %></b>
    </div>
<% unless result.fiabilite_pers.nil? %>
    <% if result.fiabilite_pers >= 80 %>
      <div class="fiabilite_pers greenf">
    <% elsif result.fiabilite_pers < 80 && result.fiabilite_pers > 50 %>
      <div class="fiabilite_pers yellowf">
    <% else %>
      <div class="fiabilite_pers redf">
    <% end %>
      <%= result.fiabilite_pers %>%
      </div>
<% end %>
</div>
    <% end %>
  <% end %>
